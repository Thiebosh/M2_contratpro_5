{
    "root": {
        "type": "object",
        "values": [
            "screen"
        ]
    },
    "style": {
        "type": "object",
        "values": [
            "?name",
            "?color",
            "?align",
            "?width",
            "?outerMargin",
            "?innerMargin",
            "?innerMarginVertical",
            "?innerMarginHorizontal",
            "?textBold",
            "?textDecoration",
            "?borders",
            "?borderRadius",
            "?flexible",
            "?flexDirection",
            "?flexAlignPrimary",
            "?flexAlignSecondary",
            "?flexChildRatio"
        ]
    },
    "block": {
        "type": "object",
        "values": [
            "?style",
            "?content"
        ]
    },
    "link": {
        "type": "object",
        "values": [
            "targetValue",
            "?external",
            "?name",
            "content",
            "?style"
        ]
    },
    "text": {
        "type": "object",
        "values": [
            "?style",
            "textValue"
        ]
    },
    "title": {
        "type": "object",
        "values": [
            "?style",
            "textValue"
        ]
    },
    "button": {
        "type": "object",
        "values": [
            "?style",
            "textValue"
        ]
    },
    "screen": {
        "type": "array",
        "values": [
            "name",
            "?defaultPage",
            "?style",
            "?content"
        ]
    },
    "content": {
        "type": "array",
        "values": [
            "?repeat",
            "?block",
            "?title",
            "?text",
            "?button",
            "?userInput",
            "?link"
        ]
    },
    "userInput": {
        "type": "object",
        "values": [
            "?style",
            "hintValue",
            "inputType"
        ]
    },
    "repeat": {
        "type": "object",
        "values": [
            "numberValue",
            "block"
        ]
    },

    "name": {
        "type": "field",
        "field": "inputText"
    },
    "defaultPage": {
        "type": "field",
        "field": "inputHome"
    },
    "targetValue": {
        "type": "field",
        "field": "inputText"
    },
    "textValue": {
        "type": "field",
        "field": "inputText"
    },
    "hintValue": {
        "type": "field",
        "field": "inputText"
    },
    "numberValue": {
        "type": "field",
        "field": "inputNumber"
    },
    "inputType": {
        "type": "field",
        "field": "selectInputType"
    },
    "external": {
        "type": "field",
        "field": "inputOnOff"
    },
    "color": {
        "type": "field",
        "field": "inputColor"
    },
    "align": {
        "type": "field",
        "field": "selectAlign"
    },
    "textDecoration": {
        "type": "field",
        "field": "selectDecoration"
    },
    "textBold": {
        "type": "field",
        "field": "inputOnOff"
    },
    "borders": {
        "type": "field",
        "field": "inputColor"
    },
    "borderRadius": {
        "type": "field",
        "field": "inputNumber"
    },
    "width": {
        "type": "field",
        "field": "inputNumber"
    },
    "outerMargin": {
        "type": "field",
        "field": "inputNumber"
    },
    "innerMargin": {
        "type": "field",
        "field": "inputNumber"
    },
    "innerMarginVertical": {
        "type": "field",
        "field": "inputNumber"
    },
    "innerMarginHorizontal": {
        "type": "field",
        "field": "inputNumber"
    },
    "flexible": {
        "type": "field",
        "field": "inputOnOff"
    },
    "flexDirection": {
        "type": "field",
        "field": "selectFlexDirection"
    },
    "flexAlignPrimary": {
        "type": "field",
        "field": "selectFlexAlignPrimary"
    },
    "flexAlignSecondary": {
        "type": "field",
        "field": "selectFlexAlignSecondary"
    },
    "flexChildRatio": {
        "type": "field",
        "field": "inputNumber"
    },

    "inputHome": {
        "type": "input",
        "nature": "radio",
        "global": "true",
        "default": true
    },
    "inputText": {
        "type": "input",
        "nature": "text",
        "default": ""
    },
    "inputNumber": {
        "type": "input",
        "nature": "number",
        "default": 0
    },
    "inputOnOff": {
        "type": "input",
        "nature": "checkbox",
        "default": true
    },
    "inputColor": {
        "type": "input",
        "nature": "color",
        "default": "#000000"
    },

    "selectAlign": {
        "type": "select",
        "values": [
            "center",
            "right",
            "left",
            "top",
            "bottom"
        ]
    },
    "selectDecoration": {
        "type": "select",
        "values": [
            "none",
            "underline",
            "italic"
        ]
    },
    "selectInputType": {
        "type": "select",
        "values": [
            "text",
            "password"
        ]
    },
    "selectFlexDirection": {
        "type": "select",
        "values": [
            "row",
            "column"
        ]
    },
    "selectFlexAlignPrimary": {
        "type": "select",
        "values": [
            "center",
            "space-between",
            "space-around",
            "space-evenly"
        ]
    },
    "selectFlexAlignSecondary": {
        "type": "select",
        "values": [
            "center",
            "start",
            "end",
            "stretch"
        ]
    }
}
